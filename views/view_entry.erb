<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
  <div class="jumbotron">
    <h1>Dear Diary</h1>
  </div>

  <h2><%= @entry.title %></h2>

  <p><%= @entry.body  %></p>

  <form action="/entry/<%= @entry.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <input class="btn btn-info btn-sm" type="submit" value="Update">
  </form>

  <form action='/entry/<%= @entry.id %>' method='post'>
    <input type="hidden" name="_method" value="DELETE">
    <input class="btn btn-info btn-sm" type='submit' value='Delete Entry'>
  </form>

  <h3>Comments</h3>

  <% @entry.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <% end %>

  <form action="/comment/<%= @entry.id %>" method="post">

    <input class="form-control" type="text" name="comment">
    <br>
    <input class="btn btn-info btn-sm" type="submit" value="Comment">
  </form>
</div>
