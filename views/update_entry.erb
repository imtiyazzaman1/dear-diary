<h1>Update your entry below</h1>

<form action='/save_entry?id=<%= @entry.id %>' method='post'>

  <div>
    <label for='title'>Title.</label>
    <input type='text' name='title' value='<%= @entry.title %>'>
  </div>

  <br>

  <div>
    <label for='body' vertical-align='top'>Entry</label>
    <textarea name='body' rows='30' cols='70' value><%= @entry.body %></textarea>
  </div>

  <input type='submit' value='Save'>
</form>
