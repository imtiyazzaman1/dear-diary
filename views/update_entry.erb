<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="container">
  <div class="jumbotron">
    <h1>Update your entry below</h1>
  </div>

  <form action='/save_entry?id=<%= @entry.id %>' method='post'>

    <div>
      <label for='title'>Title</label>
      <input class="form-control" type='text' name='title' value='<%= @entry.title %>'>
    </div>

    <br>

    <div>
      <label for='body' vertical-align='top'>Entry</label>
      <textarea class="form-control" name='body' rows='10' cols='90' value><%= @entry.body %></textarea>
    </div>
    <br>
    <input class="btn btn-info" type='submit' value='Save'>
  </form>
</div>
